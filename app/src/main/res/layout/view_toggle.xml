<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/left_part"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:background="#03A9F4"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="Online"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/right_part"
            app:layout_constraintTop_toTopOf="@+id/right_part" />

        <View
            android:id="@+id/right_part"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:background="#0288D1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/left_part" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Switch toggle"
            android:textColor="#B3E5FC"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/right_part"
            app:layout_constraintLeft_toLeftOf="@id/right_part"
            app:layout_constraintTop_toTopOf="@id/right_part" />

        <android.support.v7.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            app:layout_constraintBottom_toBottomOf="@id/right_part"
            app:layout_constraintRight_toRightOf="@id/right_part"
            app:layout_constraintTop_toTopOf="@id/right_part" />

    </android.support.constraint.ConstraintLayout>

</layout>